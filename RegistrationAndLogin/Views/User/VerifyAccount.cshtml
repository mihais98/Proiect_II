
@{
    ViewBag.Title = "VerifyAccount";
}

    <div class="blurred-bg-container">
        <div class=" content">
            <div class="text">
                <div class="card" style="width: 50rem; align-content:center;">

                    <h2>VerifyAccount</h2>

                    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                    {



                        <div class="alert alert-success ">
                            <strong>Succes!</strong> Your account has been activated succsesfully . Click here to @Html.ActionLink("Login", "Login")
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger ">
                            <strong>Error!</strong>@ViewBag.Message
                        </div>
                    }
</div>
</div>
        </div>